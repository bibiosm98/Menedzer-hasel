<form action="/user/updateLoginData/<%=id%>" method="POST">
    <div class="form-row">
        <div class="form-item">
            <label>Site:</label>
            <input id="site" type="text" name="site" value="<%=data.site%>">
        </div>
        <div class="form-item">
            <label>Login:</label>
            <input id="login" type="text" name="login" value="<%=data.login%>">
        </div>
        <div class="form-item">
            <label>Password:</label>
            <input id="password" type="text" name="password" value="<%=data.password%>">
        </div>
        <div class="form-item">
            <label>Password:</label>
            <input id="passwordRepeat" type="text" name="passwordRepeat" value="<%=data.passwordRepeat%>">
        </div>
        <div class="form-item">
            <label>Note:</label>
            <input id="note" type="text" name="note" value="<%=data.note%>">
        </div>
    </div>
    <button class="btn btn-primary" type="submit">Update Record</button>
</form>