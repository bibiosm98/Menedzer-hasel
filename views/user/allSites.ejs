<div class="flexbox-container">
    <%// for(let i=0; i<10; i++){ %>
    <% data.forEach(user =>{ %>
        <div class="flexbox-item">
            <form action="/user/updateLoginDataView/<%=user._id.$oid%>" method="POST">
                <li>ID:                 <%= user._id.$oid %></li>
                <li>Site:               <%= user.site %> </li>
                <li>Login:              <%= user.login %> </li>
                <li>passwordStrength:   <%= user.passwordStrength %> </li>
                <li>Note:               <%= user.note %> </li>
                <button type="sumbit">Update Password</button>
            </form>
            <div>
                <a href="/user/getLoginData/<%=user._id.$oid%>">View Password</a>
            </div>
            <div>
                <a href="/user/deleteLoginData/<%=user._id.$oid%>">Remove Record</a>
            </div>
        </div>
    <% }) %>
    <%// } %>
</div>


