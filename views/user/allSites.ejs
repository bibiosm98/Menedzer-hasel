<h1 class="page-header">Zalogowany User</h1>
<h1 class="page-header">AllSites - rekordy posiadanych hase≈Ç</h1>

<div class="flexbox-container">
    <% data.forEach(user =>{ %>
        <div class="form-item">
            <form action="/user/updateLoginDataView/<%=user._id.$oid%>" method="POST">
                <li>
                    <label>ID: </label>
                    <div class="form-item-value"><%= user._id.$oid %></div>
                </li>
                <li>
                    <label>Site: </label>
                    <div class="form-item-value"><%= user.site %></div>
                </li>
                <li>
                    <label>Login: </label>
                    <div class="form-item-value"><%= user.login %></div>
                </li>
                <li>
                    <label>PasswordStrength: </label>
                    <div class="form-item-value"><%= user.passwordStrength %></div>
                </li>
                <li>
                    <label>Note: </label>
                    <div class="form-item-value"><%= user.note %></div>
                </li>
                
                <button class="btn btn-primary" type="sumbit">Update Password</button>
                    <a  class="btn btn-primary btn-link" href="/user/getLoginData/<%=user._id.$oid%>">View Password</a>
                    <a  class="btn btn-danger btn-link" href="/user/deleteLoginData/<%=user._id.$oid%>">Remove Record</a>
            </form>
        </div>
    <% }) %>
</div>