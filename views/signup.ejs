<h1 class="page-header">Załóż konto</h1>

<div class="display-mid">
    <form action="/signup" method="POST">
        <div class="form-row">
            <div class="form-item">
                <label>Email:</label>
                <input type="email" name="email" value="<%= data.email %>" required>
            </div>
            <div class="form-item">
                <label>Login:</label>
                <input type="text" name="login" value="<%= data.login %>" required>
            </div>
            <div class="form-item">
                <label>Hasło:</label>
                <input id="password" type="text" name="password" value="" required>
                <div>Siła hasła: </div> <div id="strength"></div>
            </div>
            <div class="form-item">
                <label>Powtórz hasło:</label>
                <input id="password-repeat" type="text" name="password-repeat" value="" required>
            </div>
            <div id="password-error"></div>
        </div>
        <button id="btn-submit" class="btn btn-primary btn-to-right" type="submit">Utwórz nowe konto</button>
    </form>
<div>

