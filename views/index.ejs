<h1>Strona główna index.js</h1>
<h1>Zaloguj się</h1>


<form action="/signin" method="POST">
    <div class="form-row">
        <div class="form-item">
            <label>Login:</label>
            <input type="text" name="login" value="<%=data.login%>">
        </div>
        <div class="form-item">
            <label>Password:</label>
            <input type="text" name="password" value="<%=data.password%>">
        </div>
    </div>
    <button class="btn btn-primary" type="submit">Sign in</button>
</form>

<br><br><br>

<h1>Logowanie robocze</h1>

<select id="selectRow" name="user">
    <% users.forEach(user =>{ %>
        <option label="<%= user.login %>" value="<%= user.login %>">
            <%= user.login %>_____<%= user.password %>    
        </option>
    <% }) %>
</select> 
